{
  "cassandra": {
    "cmd": ["dev-bin/cassandra.sh"],
    "cwd": ["__dirname", ".."],
    "log_file": "test-cassandra.log",
    "wait_for": "socket",
    "wait_for_options": {
      "host": "127.0.0.1",
      "port": 9160
    },
    "timeout": 15000
  },

  "create_schema": {
    "cmd": ["scripts/create-schema.sh"],
    "cwd": ["__dirname", ".."],
    "depends": ["cassandra"],
    "log_file": "test-create-schema.log",
    "wait_for": "stdout",
    "wait_for_options": {
      "string": "Done"
    }
  }
}
