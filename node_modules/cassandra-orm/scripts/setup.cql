CREATE KEYSPACE cassandra_orm with strategy_class = SimpleStrategy and strategy_options:replication_factor=1;

USE cassandra_orm;

-- Unified column family
CREATE COLUMNFAMILY objects (
  KEY ascii PRIMARY KEY
);

-- Accounting column family

CREATE COLUMNFAMILY accounting (
  KEY ascii PRIMARY KEY
) WITH default_validation = counter;

-- Agent tokens column family

CREATE COLUMNFAMILY agent_tokens (
  KEY ascii PRIMARY KEY
);

-- Index column families

CREATE COLUMNFAMILY account_external_idx (
  KEY ascii PRIMARY KEY
);

CREATE COLUMNFAMILY collector_bound_check_idx (
  KEY ascii PRIMARY KEY
);

CREATE COLUMNFAMILY agent_to_entity_idx (
  KEY ascii PRIMARY KEY
);

CREATE COLUMNFAMILY agent_token_idx (
  KEY ascii PRIMARY KEY
);

-- Person column family

CREATE COLUMNFAMILY people (
  KEY ascii PRIMARY KEY
);

-- Person index column families

CREATE COLUMNFAMILY ssn_to_person_idx (
  KEY ascii PRIMARY KEY
);

-- Index column families
CREATE COLUMNFAMILY session_to_service_idx (
  KEY ascii PRIMARY KEY
);

CREATE COLUMNFAMILY tag_to_service_idx (
  KEY ascii PRIMARY KEY
);
